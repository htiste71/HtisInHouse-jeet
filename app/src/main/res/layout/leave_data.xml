<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp">

        <com.htistelecom.htisinhouse.font.UbuntuBold
            android:id="@+id/txtLeaveDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/txtLeaveType"
            android:layout_alignEnd="@+id/txtLeaveType"
            android:layout_marginTop="10dp"
            android:text="@string/leavedate"
            android:textColor="@color/grey_text2"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.htistelecom.htisinhouse.font.UbuntuBold
            android:id="@+id/txtCol2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txtLeaveDate"
            android:layout_alignBottom="@+id/txtLeaveDate"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_toEndOf="@+id/txtLeaveDate"
            android:text="@string/colon"
            android:textColor="@color/grey_text2"
            android:textSize="16sp"
            android:textStyle="bold" />


        <com.htistelecom.htisinhouse.font.Ubuntu
            android:id="@+id/tvLeaveDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txtLeaveDate"
            android:layout_alignBottom="@+id/txtLeaveDate"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_toEndOf="@+id/txtCol2"
            android:text=""
            android:textColor="@color/grey_text"
            android:textSize="16sp"
            android:textStyle="normal" />

        <com.htistelecom.htisinhouse.font.UbuntuBold
            android:id="@+id/txtLeaveType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtLeaveDate"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_marginTop="5dp"
            android:text="@string/leave_type"
            android:textColor="@color/grey_text2"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.htistelecom.htisinhouse.font.UbuntuBold
            android:id="@+id/txtCol3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txtLeaveType"
            android:layout_alignBottom="@+id/txtLeaveType"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_toEndOf="@+id/txtLeaveType"
            android:text="@string/colon"
            android:textColor="@color/grey_text2"
            android:textSize="16sp"
            android:textStyle="bold" />


        <com.htistelecom.htisinhouse.font.Ubuntu
            android:id="@+id/tvLeaveType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvLeaveDate"
            android:layout_marginStart="@dimen/_3sdp"
            android:layout_marginTop="5dp"
            android:layout_toEndOf="@+id/txtCol3"
            android:text=""
            android:textColor="@color/grey_text"
            android:textSize="16sp"
            android:textStyle="normal" />

        <com.htistelecom.htisinhouse.font.UbuntuBold
            android:id="@+id/txtReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtLeaveType"
            android:layout_alignStart="@+id/txtLeaveType"
            android:layout_alignEnd="@+id/txtLeaveType"
            android:layout_marginTop="5dp"
            android:text="@string/reason"
            android:textColor="@color/grey_text2"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.htistelecom.htisinhouse.font.UbuntuBold
            android:id="@+id/txtCol5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/txtReason"
            android:layout_marginStart="@dimen/_5sdp"
            android:layout_toEndOf="@+id/txtReason"
            android:text="@string/colon"
            android:textColor="@color/grey_text2"
            android:textSize="16sp"
            android:textStyle="bold" />


        <com.htistelecom.htisinhouse.font.Ubuntu
            android:id="@+id/tvReason"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvLeaveType"
            android:layout_alignStart="@+id/tvLeaveType"
            android:layout_alignTop="@+id/txtReason"
            android:layout_toEndOf="@+id/txtLeaveType"
            android:textColor="@color/grey_text"
            android:textSize="16sp"
            android:textStyle="normal" />

            <com.htistelecom.htisinhouse.font.UbuntuBold
                android:id="@+id/txtStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvReason"
                android:layout_alignStart="@+id/txtLeaveType"
                android:layout_alignEnd="@+id/txtLeaveType"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:text="@string/status"
                android:textColor="@color/grey_text2"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.htistelecom.htisinhouse.font.UbuntuBold
                   android:id="@+id/txtCol4"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_alignTop="@+id/txtStatus"
                   android:layout_alignBottom="@+id/txtStatus"
                   android:layout_marginStart="@dimen/_5sdp"
                   android:layout_toEndOf="@+id/txtStatus"
                   android:text="@string/colon"
                   android:textColor="@color/grey_text2"
                   android:textSize="16sp"
                   android:textStyle="bold" />


               <com.htistelecom.htisinhouse.font.Ubuntu
                   android:id="@+id/tvStatus"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_below="@+id/tvReason"
                   android:layout_alignStart="@+id/tvLeaveType"
                   android:layout_alignTop="@+id/txtStatus"
                   android:textColor="@color/grey_text"
                   android:textSize="16sp"
                   android:textStyle="normal" />
    </RelativeLayout>

</android.support.v7.widget.CardView>