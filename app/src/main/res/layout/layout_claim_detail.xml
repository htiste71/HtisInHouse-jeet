<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100">

        <com.htistelecom.htisinhouse.font.Ubuntu
            android:id="@+id/txtTotalClaimFragmentWFMS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="70"
            android:text="@string/total_claims"
            android:textColor="@color/colorDarkBlue"
            android:textSize="16sp"
           />

        <com.htistelecom.htisinhouse.font.Ubuntu
            android:id="@+id/tvTotalClaimFragmentWFMS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:singleLine="true"
            android:text="@string/_0_00"
            android:textColor="@color/colorDarkBlue"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100"
        android:layout_marginTop="20dp">

        <com.htistelecom.htisinhouse.font.Ubuntu
            android:id="@+id/txtPendingClaimFragmentWFMS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="70"
            android:text="@string/strPending"
            android:textColor="@color/colorDarkBlue"
            android:textSize="16sp"
            />

        <com.htistelecom.htisinhouse.font.Ubuntu
            android:id="@+id/tvPendingClaimFragmentWFMS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:singleLine="true"
            android:text="@string/_0_00"
            android:textColor="@color/colorDarkBlue"
            android:textSize="16sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="100">

        <com.htistelecom.htisinhouse.font.Ubuntu
            android:id="@+id/txtApprovedClaimFragmentWFMS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="70"
            android:text="@string/approved"
            android:textColor="@color/colorDarkBlue"
            android:textSize="16sp"
            />

        <com.htistelecom.htisinhouse.font.Ubuntu
            android:id="@+id/tvApprovedClaimFragmentWFMS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:singleLine="true"
            android:text="@string/_0_00"
            android:textColor="@color/colorDarkBlue"
            android:textSize="16sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:weightSum="100">

        <com.htistelecom.htisinhouse.font.Ubuntu
            android:id="@+id/txtAdvanceClaimFragmentWFMS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="70"
            android:text="@string/strAdvance"
            android:textColor="@color/colorDarkBlue"
            android:textSize="16sp"
            />

        <com.htistelecom.htisinhouse.font.Ubuntu
            android:id="@+id/tvAdvanceClaimFragmentWFMS"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:singleLine="true"
            android:text="@string/_0_00"
            android:textColor="@color/colorDarkBlue"
            android:textSize="16sp" />

    </LinearLayout>






</LinearLayout>