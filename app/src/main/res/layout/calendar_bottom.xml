<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="100">

        <com.htistelecom.htisinhouse.font.Ubuntu
            android:id="@+id/txtTotalClaim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="70"
            android:text="@string/total_claims"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.htistelecom.htisinhouse.font.Ubuntu
            android:id="@+id/tvTotalClaim"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:singleLine="true"
            android:text="@string/_0_00"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:weightSum="100">

        <com.htistelecom.htisinhouse.font.Ubuntu
            android:id="@+id/txtPending"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="70"
            android:text="@string/advance_claims"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.htistelecom.htisinhouse.font.Ubuntu
            android:id="@+id/tvPending"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:singleLine="true"
            android:text="@string/_0_00"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:weightSum="100">

        <com.htistelecom.htisinhouse.font.Ubuntu
            android:id="@+id/txtApproved"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_weight="70"
            android:text="@string/approved"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.htistelecom.htisinhouse.font.Ubuntu
            android:id="@+id/tvApproved"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:singleLine="true"
            android:text="@string/_0_00"
            android:textColor="@color/black"
            android:textSize="16sp" />

    </LinearLayout>




</LinearLayout>