<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    app:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="80"
                android:orientation="vertical">

                <com.htistelecom.htisinhouse.font.UbuntuBold
                    android:id="@+id/tvProjectNameRowTaskCompletedAdapterWFMS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"


                    android:text="@string/project"
                    android:textColor="@color/grey_text2"
                    android:textSize="16sp"
                    android:textStyle="bold" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <com.htistelecom.htisinhouse.font.UbuntuBold
                        android:id="@+id/textSiteNameRowTaskCompletedAdapterWFMS"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_weight="30"
                        android:text="@string/site"
                        android:textColor="@color/grey_text2"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.htistelecom.htisinhouse.font.Ubuntu
                        android:id="@+id/tvSiteNameRowTaskCompletedAdapterWFMS"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="70"
                        android:text=":hello Test"
                        android:textColor="@color/grey_text"
                        android:textSize="16sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <com.htistelecom.htisinhouse.font.UbuntuBold
                        android:id="@+id/txtTaskRowTaskCompletedAdapterWFMS"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"

                        android:text="@string/task"
                        android:textColor="@color/grey_text2"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.htistelecom.htisinhouse.font.Ubuntu
                        android:id="@+id/tvTaskNameRowTaskCompletedAdapterWFMS"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="70"

                        android:maxLines="2"
                        android:text="hello"
                        android:textColor="@color/grey_text"
                        android:textSize="16sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20">

                <ImageView
                    android:id="@+id/ivAddClaimRowTaskCompletedAdapterWFMS"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:background="@drawable/circle_blue"
                    android:src="@drawable/icon_plus" />
            </RelativeLayout>
        </LinearLayout>

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="15dp"
            android:background="#f1f1f1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="100">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="80"
                android:orientation="vertical">




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <com.htistelecom.htisinhouse.font.UbuntuBold
                        android:id="@+id/textTotalAmountRowTaskCompletedAdapterWFMS"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_weight="30"
                        android:text="@string/strTotal"
                        android:textColor="@color/grey_text2"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.htistelecom.htisinhouse.font.Ubuntu
                        android:id="@+id/tvTotalAmountRowTaskCompletedAdapterWFMS"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="70"
                        android:text=":hello Test"
                        android:textColor="@color/grey_text"
                        android:textSize="16sp"
                        android:textStyle="normal" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:weightSum="100">

                    <com.htistelecom.htisinhouse.font.UbuntuBold
                        android:id="@+id/txtApprovedAmountRowTaskCompletedAdapterWFMS"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="30"

                        android:text="@string/strApproved"
                        android:textColor="@color/grey_text2"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <com.htistelecom.htisinhouse.font.Ubuntu
                        android:id="@+id/tvApprovedAmountRowTaskCompletedAdapterWFMS"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="70"

                        android:maxLines="2"
                        android:text="hello"
                        android:textColor="@color/grey_text"
                        android:textSize="16sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </LinearLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20">

                <ImageView
                    android:id="@+id/ivDetailClaimRowTaskCompletedAdapterWFMS"
                    android:layout_width="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_task_detail_claim" />
            </RelativeLayout>
        </LinearLayout>



    </LinearLayout>
</android.support.v7.widget.CardView>