<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <com.htistelecom.htisinhouse.font.Ubuntu

        android:id="@+id/tvSubActivityTaskImagesAdapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/ivSubActivityTaskImagesAdapter"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/icon_camera_image" />

        <ImageView
            android:id="@+id/ivSubActivityDemoTaskImagesAdapter"
            android:layout_width="120dp"
            android:layout_height="90dp"
            android:layout_marginLeft="20dp"
            android:contentDescription="@null"
            android:scaleType="fitXY"
            android:src="@drawable/icon_man" />
    </LinearLayout>



















</LinearLayout>