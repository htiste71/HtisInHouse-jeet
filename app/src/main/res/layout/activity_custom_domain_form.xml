<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/_10sdp"
        android:fillViewport="true"
        android:gravity="center"
        tools:context=".activity.LoginActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_20sdp">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:contentDescription="@null"
                android:gravity="start"
                android:src="@drawable/logo" />

            <com.htistelecom.htisinhouse.font.Ubuntu
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:text="To get your company login page, enter the company domain name "
                android:textColor="@color/colorBlack"
                android:textSize="16sp" />


            <com.htistelecom.htisinhouse.font.Ubuntu
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Custom Domain Name"
                android:textColor="@color/black"
                android:textSize="16sp" />


            <LinearLayout
                android:id="@+id/llEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:visibility="visible">

                <com.htistelecom.htisinhouse.font.UbuntuEditText
                    android:id="@+id/etCustomUrl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_weight="60"
                    android:background="@drawable/rect_edittext"
                    android:hint="@string/strCustomUrl"
                    android:inputType="textEmailAddress"
                    android:padding="10dp"
                    android:layout_marginRight="10dp"
                    android:paddingTop="15dp"
                    android:textSize="16sp"
                    android:paddingBottom="@dimen/_8sdp"
                    android:textColor="@color/grey_text2" />

                <com.htistelecom.htisinhouse.font.Ubuntu
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_weight="40"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:background="@drawable/rect_edittext"
                    android:text=".htistelecom.in" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="1">

                <com.htistelecom.htisinhouse.font.UbuntuButton
                    android:id="@+id/btnContinueCustomUrl"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/rect_background_border_orange_radius_13"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/strContinue"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_16sdp" />

                <com.htistelecom.htisinhouse.font.UbuntuButton
                    android:id="@+id/btnBack"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="30dp"
                    android:layout_weight="1"
                    android:background="@drawable/rect_edittext"
                    android:gravity="center"
                    android:padding="@dimen/_8sdp"
                    android:text="@string/strBack"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_16sdp"
                    android:visibility="gone" />


            </LinearLayout>

        </LinearLayout>


        <com.htistelecom.htisinhouse.font.Ubuntu
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:text="@string/strCopyRight"
            android:textColor="#90000000"
            android:textSize="14sp" />
    </RelativeLayout>
</RelativeLayout>
