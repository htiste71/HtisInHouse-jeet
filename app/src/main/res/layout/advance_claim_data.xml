<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/_1sdp"
    android:layout_marginBottom="@dimen/_1sdp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="50">

            <com.htistelecom.htisinhouse.font.UbuntuBold
                android:id="@+id/txtAdvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@+id/txtRemarks"
                android:layout_alignEnd="@+id/txtRemarks"
                android:layout_marginTop="@dimen/_3sdp"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/date"
                android:textColor="@color/grey_text2"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.htistelecom.htisinhouse.font.UbuntuBold
                android:id="@+id/txtCol1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/txtAdvDate"
                android:layout_alignBottom="@+id/txtAdvDate"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toEndOf="@+id/txtAdvDate"
                android:text="@string/colon"
                android:textColor="@color/grey_text2"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.htistelecom.htisinhouse.font.Ubuntu
                android:id="@+id/tvAdvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/txtAdvDate"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toEndOf="@+id/txtCol1"
                android:maxLines="1"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/grey_text"
                android:textSize="16sp"
                android:textStyle="normal" />

            <com.htistelecom.htisinhouse.font.UbuntuBold
                android:id="@+id/txtAdvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtAdvDate"
                android:layout_alignStart="@+id/txtRemarks"
                android:layout_alignEnd="@+id/txtRemarks"
                android:layout_marginTop="@dimen/_3sdp"
                android:maxLines="1"
                android:singleLine="true"
                android:text="@string/amount_txt"
                android:textColor="@color/grey_text2"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.htistelecom.htisinhouse.font.UbuntuBold
                android:id="@+id/txtCol2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/txtAdvAmount"
                android:layout_alignBottom="@+id/txtAdvAmount"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toEndOf="@+id/txtAdvAmount"
                android:text="@string/colon"
                android:textColor="@color/grey_text2"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.htistelecom.htisinhouse.font.Ubuntu
                android:id="@+id/tvAdvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAdvDate"
                android:layout_alignTop="@+id/txtAdvAmount"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toEndOf="@+id/txtCol2"
                android:maxLines="1"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/grey_text"
                android:textSize="16sp"
                android:textStyle="normal" />

            <com.htistelecom.htisinhouse.font.UbuntuBold
                android:id="@+id/txtRemarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAdvAmount"
                android:layout_marginTop="@dimen/_3sdp"
                android:text="@string/remarks"
                android:textColor="@color/grey_text2"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.htistelecom.htisinhouse.font.UbuntuBold
                android:id="@+id/txtCol3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/txtRemarks"
                android:layout_alignBottom="@+id/txtRemarks"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_toEndOf="@+id/txtRemarks"
                android:text="@string/colon"
                android:textColor="@color/grey_text2"
                android:textSize="16sp"
                android:textStyle="bold" />

            <com.htistelecom.htisinhouse.font.Ubuntu
                android:id="@+id/tvAdvRemarks"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvAdvAmount"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_toEndOf="@+id/txtCol3"
                android:maxLines="2"
                android:text=""
                android:textColor="@color/grey_text"
                android:textSize="16sp"
                android:textStyle="normal" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/tvAdvRemarks"
                android:background="@android:color/darker_gray" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp"
            android:orientation="horizontal"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/llAccept"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:orientation="horizontal"
                android:padding="5dp">

                <com.htistelecom.htisinhouse.font.Ubuntu
                    android:id="@+id/green_text"
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:background="@drawable/icon_accept"
                    android:padding="2dp"
                    android:textSize="12sp" />

                <com.htistelecom.htisinhouse.font.Ubuntu
                    android:id="@+id/regularised_text"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".45"
                    android:padding="4dp"
                    android:text="@string/accept"
                    android:textSize="12sp" />


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llReject"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_weight=".3"
                android:orientation="horizontal"
                android:padding="5dp">

                <com.htistelecom.htisinhouse.font.Ubuntu
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/_2sdp"
                    android:background="@drawable/icon_reject"
                    android:padding="2dp"
                    android:textSize="12sp" />

                <com.htistelecom.htisinhouse.font.Ubuntu
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".65"
                    android:padding="4dp"
                    android:text="@string/reject"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".5"
                android:background="@drawable/bg_calender"
                android:orientation="horizontal"
                android:padding="5dp"
                android:visibility="invisible" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>