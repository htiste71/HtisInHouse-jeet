<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorOrange"
        android:orientation="horizontal"
        android:padding="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivUserImageHeaderWFMS"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:contentDescription="@string/nav_header_desc"
            app:srcCompat="@mipmap/ic_launcher_round" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp">

            <com.htistelecom.htisinhouse.font.Ubuntu
                android:id="@+id/tvNameHeaderWFMS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/nav_header_title"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <com.htistelecom.htisinhouse.font.Ubuntu
                android:id="@+id/tvEmailHeaderWFMS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvNameHeaderWFMS"

                android:text="@string/nav_header_subtitle"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </RelativeLayout>

    </LinearLayout>
    <!--    Punched In: 08:30 am, 02 May,2020-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:background="@color/white"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
       >

        <com.htistelecom.htisinhouse.font.Ubuntu
            android:id="@+id/tvPunchedInTimeHeader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Punched In: 08:30 am, 02 May,2020"
            android:textColor="@color/colorDarkBlue"
            android:gravity="center"
            android:textSize="14sp" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/btnSwitchHeader"
            android:checked="false"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/tvPunchedInTimeHeader"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="wrap_content" />


    </RelativeLayout>

</LinearLayout>
